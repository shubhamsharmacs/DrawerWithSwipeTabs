<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppCompat.ActionButton"
    android:clickable="true"
    android:paddingLeft="0dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginRight="@dimen/spacingSmall"
        android:adjustViewBounds="true"
        android:id="@android:id/icon"
        tools:src="@drawable/ic_action_device_access_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Send Email"
            style="@style/contactInfoTextPrimary"
            android:lines="1" />

        <TextView
            android:id="@android:id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="info@listing.com"
            style="@style/contactInfoTextSecondary"
            android:lines="1" />

    </LinearLayout>

</LinearLayout>