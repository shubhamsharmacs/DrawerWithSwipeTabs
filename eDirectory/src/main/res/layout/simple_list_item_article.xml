<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/favorite_list_item_selector"
    android:padding="@dimen/spacingMedium"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/articleResultTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="How to relax and be zen"
        android:id="@id/articleTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:ellipsize="end"
        android:lines="1"
        android:layout_toLeftOf="@id/articleImage" />

    <TextView
        style="@style/articleResultTextBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacingSmall"
        android:text="@string/by"
        android:id="@+id/label1"
        android:layout_below="@id/articleTitle"
        android:layout_alignParentLeft="true" />

    <TextView
        style="@style/articleResultTextAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Laura Green"
        android:id="@id/articleAuthor"
        android:layout_alignTop="@+id/label1"
        android:layout_toRightOf="@+id/label1" />

    <ImageView
        style="@style/imageResult"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:id="@id/articleImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/spacingMedium" />
</RelativeLayout>