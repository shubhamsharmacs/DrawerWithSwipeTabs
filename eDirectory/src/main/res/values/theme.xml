        <item name="android:paddingTop">@dimen/spacingSmall</item>
        <item name="android:paddingBottom">@dimen/spacingSmall</item>
        <item name="android:paddingLeft">@dimen/spacingMedium</item>
        <item name="android:paddingRight">@dimen/spacingMedium</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:textColor">@color/textColorPrimaryInverse</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#2ecc71</item>
    </style>

